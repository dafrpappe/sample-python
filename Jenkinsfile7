pipeline {
  agent { 
    dockerfile {
      args '-u root'
    } 
  }
  stages {
    stage('Publish on github'){
        steps{
            sh 'rm -rf sample-python'
            sh 'ls -l'
            sh 'git clone https://github.com/dafrpappe/sample-python.git'
            sh 'echo "Publishing on Github..."'
            sh 'chmod 777 create_tags.sh'
            sh './create_tags.sh'


        }
    }
    stage('Build artifact'){
      steps {
        sh '''
        python3 hello_world.py

        
        '''
      }    
    }
    stage('Build') {
      steps {
        // Clean before build
        cleanWs()

      }
    }    
  }
}