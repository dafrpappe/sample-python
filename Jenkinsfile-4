pipeline{
    agent {
        docker{
            image 'ubuntu:18.04'
            args '-u root'
            label 'docker'
        }
    }
    stages {
      stage('Prepare container') {
        steps {
          sh '''
          apt-get update
          apt-get install -y git
  
          '''
        }
      }
      stage('Build artifact'){
        steps {
          sh '''
          echo "test"
          git --version
          
          '''
        }

      }
    }
}