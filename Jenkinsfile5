pipeline {
  agent { dockerfile {
            args '-u root' 
          } 
        }
  stages {
    stage('Clone code from Git repository and setup python env'){
        steps{
            sh 'git clone https://github.com/dafrpappe/sample-python.git'
            sh 'pip3 install -r requirements.txt'

        }
    }
    stage('Build artifact'){
      steps {
        sh '''
        python3 hello_world.py
        
        '''
      }    
    }
    stage('Build') {
      steps {
        // Clean before build
        cleanWs()

      }
    }    
  }
}